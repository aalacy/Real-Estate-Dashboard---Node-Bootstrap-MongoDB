      } -->

      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12">
            
            <!-- Header -->
            <div class="header">
              <div class="header-body">
                <div class="row align-items-center">
                  <div class="col">
					  
                    <!-- Title -->
                    <h1 class="header-title">
                      Tenancies
