    <!-- JAVASCRIPT
    ================================================== -->
    <% include ../partials/scripts %>

    <script type="text/javascript">
      let properties = $('#hidden_properties').val();
      let occupiedProperties = $('#hidden_occupiedproperties').val();
      let vacantProperties = $('#hidden_vacantproperties').val();
      try {
        properties = JSON.parse(properties);
      } catch(e) { properties = [];}
      try {
        occupiedProperties = JSON.parse(occupiedProperties);
      } catch(e) { occupiedProperties = [];}
      try {
        vacantProperties = JSON.parse(vacantProperties);
      } catch(e) { vacantProperties = [];}

      let items = properties;
      let allProperties = properties;
      let current_list = '.all-tenancies';
      const displayAllTenancies = () => {
        $(current_list).empty();
        items.forEach( function(property) {
          property.tenancies.forEach( function(unit){
            let tenants = ''
            if (unit.tenants.length == 0) {
              tenants = '●&nbsp;No Tenants';
            } 
            if (unit.tenants.length == 1) {
             tenants = '●&nbsp;1 Tenant';
            } 
            if (unit.tenants.length > 1) { 
              tenants = `${unit.tenants}Tenants`
            }
            if (unit.rent_frequency == 'Vacant') {
              $(current_list).append(`
                <div class="card mb-3">
                  <div class="p-3">
                    <div class="row align-items-center unit-item">
                      <div class="col-auto">
                        <h1 class="mb-0 avatar avatar-lg">
                          <img src="/img/icons/unit.png" class="avatar-img">
                        </h1>
                      </div>
                      <div class="col-4">
                        <h4 class="card-title mb-1">
                          <a href="/property/overview/${property.id}/units/${unit.id}" class="detail-unit" data-unit="${JSON.stringify(unit)}">${unit.description}</a>
                        </h4>
                        <p class="card-text small text-muted">
                          Vacant &nbsp;●&nbsp; <a href="#" class="edit-unit" data-unit="${JSON.stringify(unit)}" >Add a tenancy</a>
                        </p>
                      </div>
                      <div class="col-4">
                        <h4 class="card-title text-muted mb-1">
                          ●&nbsp;Not Collecting Rent
                        </h4>
                      </div>
                      <div class="col-2 text-muted">
                        ${tenants}
                      </div>
                      <div class="col-auto ml-auto">
                        <div class="dropdown">
                          <a href="#" class="dropdown-ellipses dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <i class="fe fe-more-vertical"></i>
                          </a>
                          <div class="dropdown-menu dropdown-menu-right">
                            <a href="#!" class="dropdown-item edit-unit" data-property="${property.id}" data-unit="${JSON.stringify(unit)}">
                              Edit
                            </a>
                            <a href="#!" class="dropdown-item delete-unit action-unit"  data-property="${property.id }" data-unit="${unit.id}">
                              Remove
                            </a>
                          </div>
                      </div>
                      </div>
                    </div>
                  </div>
                </div>`);
              } else {
                let rent_price_freq = parseInt(unit.rent_price) > 0 ? `£${unit.rent_price.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')}`: '';
                rent_price_freq = `Per ${unit.rent_frequency}`;
                $(current_list).append(`
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row align-items-center unit-item">
                        <div class="col-auto">
                          <h1 class="mb-0 avatar avatar-md">
                            <img src="/img/icons/unit.png" class="avatar-img">
                          </h1>
                        </div>
                        <div class="col-4">
                          <h4 class="card-title mb-1">
                            <a href="/property/overview/${property.id}/units/${unit.id}" class="detail-unit" data-unit="${JSON.stringify(unit)}">${unit.description}</a>
                          </h4>
                          <p class="card-text small text-muted">
                            <span class="text-success mr-2">●</span> Active Tenancy
                          </p>
                        </div>
                        <div class="col-4">
                          <h4 class="card-title mb-1">
                            ${rent_price_freq}
                          </h4>
                        </div>
                        <div class="col-2">
                          ${tenants}
                        </div>
                        <div class="col-auto ml-auto">
                          <div class="dropdown">
                            <a href="#" class="dropdown-ellipses dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fe fe-more-vertical"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                              <a href="#!" class="dropdown-item edit-unit" data-property="${property.id}" data-unit="${JSON.stringify(unit)}">
                                Edit
                              </a>
                              <a href="#!" class="dropdown-item delete-unit action-unit"   data-property="${property.id}" data-unit="${unit.id}">
                                Remove
                              </a>
                            </div>
                        </div>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>`)
            }
          });
        });
      }
      $(function(){
        // display property filter
        var option = new Option('All', 'all', true, true);
        $('.propertyFilter').append(option);
        allProperties.map(property => {
          var property_name = property.address + ', ' + property.city;
          option = new Option(property_name, property.id, true, true);
          $('.propertyFilter').append(option);
        });
        $('.propertyFilter').val('all').trigger('change');

        // Initialize
        displayAllTenancies();

        $('.propertyFilter').on('select2:select', function (e) {
          if (e.params.data.id == 'all') {
            items = properties;
          } else {
            items = properties.filter(item => item.id == e.params.data.id);
          }
          displayAllTenancies();
        });

        $('.tenancy-tab').click(function(e){
          e.preventDefault();
          const tab = $(this).attr('href').replace('#', '');
          current_list = `.${tab}-tenancies`;
          if (tab == 'all') {
            items = properties;
            allProperties = properties;
          } else if (tab == 'occupied') {
            items = occupiedProperties;
            allProperties = occupiedProperties;
          } else {
            items = vacantProperties;
            allProperties = vacantProperties;
          }
          displayAllTenancies();
        });
      })
    </script>

  </body>
