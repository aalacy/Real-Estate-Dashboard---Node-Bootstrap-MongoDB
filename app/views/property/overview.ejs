            if (res.status == 'ok') {
              let net_income = '';
              if (res.net_profit > 0) {
                net_income = `<span class="h2">£</span>${res.net_profit.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,')}`;
              } else { 
