          };

          const token = $('meta[name="csrf"]').attr('content');
          fetch('/property/loan/new', {
              credentials: 'same-origin', // <-- includes cookies in the request
              headers: {
                'CSRF-Token': token, // <-- is the csrf token as a header
                'Content-Type': 'application/json'
              },
              method: 'POST',
              body: JSON.stringify({
                  property: data
              })
          })
          .then(response => response.json())
          .then(function(res) {
            $('#modalAddNewLoan').modal('hide');
            if (res.status == 'ok') {
              equity = res.data.equity;
              debt = res.data.debt;
              drawLoanChart(res.data)
              property = res.data.newproperty;
              $('.property_debt').html(res.data.debt.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,'));
              $('.property_equity').html(res.data.equity.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,'));
              $('.ownership-content-block').show();
              $('.ownership-empty-block').hide();
            } else {
              $('.ownership-content-block').hide();
              $('.ownership-empty-block').show();
            }
          })
          .catch(error => {
            console.log(error);
          });
        })

        // diable input when having no loan
        $('input[name="property[has_loan]"]').change(function(){
          if ($(this).val() == 1) {
            $('#modalAddNewLoan input').prop('disabled', false)
          } else {
            $('#modalAddNewLoan input').prop('disabled', true)
          }
          $('#modalAddNewLoan input[name="property[has_loan]"]').prop('disabled', false)
        })

        // fetch loan value
        const token = $('meta[name="csrf"]').attr('content');
        fetch('/property/loan/all', {
            credentials: 'same-origin', // <-- includes cookies in the request
            headers: {
              'CSRF-Token': token, // <-- is the csrf token as a header
              'Content-Type': 'application/json'
            },
            method: 'POST',
            body: JSON.stringify({
                property: {
                  id: $('input[name="property[id]"]').val()
                }
            })
        })
        .then(response => response.json())
        .then(function(res) {
          if (res.status == 'ok' && res.data.equity != 0) {
            debt = res.data.debt;
            equity = res.data.equity;
            $('.property_debt').val(res.data.debt.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,'));
            $('.property_equity').val(res.data.equity.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,'));
            $('.property_debt').html(res.data.debt.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,'));
            $('.property_equity').html(res.data.equity.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, '$1,'));
            drawLoanChart(res.data)
            $('.ownership-empty-block').hide();
          } else {
            $('.ownership-content-block').hide();
            $('.ownership-empty-block').show();
          }
        })
        .catch(error => {
          console.log(error);
        });

        filterCashflowByDate('YTD');
        // cashflow date filter
        $('.cashflowDateFilter').on('select2:select', function (e) {
          filterCashflowByDate(e.params.data.id);
        });

        // show 3 most recent payment
        fetchTransactions(property.id, 3, false);

        // fetch units of this property
        await selectPropertyFilter(property.id)

        // display categories
        // initialize the category with income
        changeCategorySelection(income_categories);
        
        $('#transaction_category').val(null);
        $('#transaction_category').trigger('change');
      });
    </script>
  </body>
