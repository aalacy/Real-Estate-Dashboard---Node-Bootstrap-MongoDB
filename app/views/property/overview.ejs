            plotOptions: {
              series: {
                  dataLabels: {
                      enabled: false,
                      format: '{point.name}: {point.y:.1f}%'
                  }
              }
            },
            tooltip: {
              borderRadius: 10,
              borderWidth: 1,
              headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
              pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>£{point.y:.2f} ({point.percentage:.2f}%)</b> of total<br/>'
            },
            series: [{
              name: "",
              size: '100%',
              innerSize: '60%',
              colorByPoint: true,
              data: [
                  {
                      name: "Income",
                      color: '#41d3bd',
                      y: <%=total_income%>,
                      drilldown: "Income"
