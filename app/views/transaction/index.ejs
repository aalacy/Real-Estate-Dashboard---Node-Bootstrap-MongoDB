    <div class="modal  fade" id="modalAddNewTransaction" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="transaction">
        <form id="add-unit-form" class="form-inline" method="post" action="/transaction/create">
          <input type="hidden" name="_csrf" value="<%= token %>">
          <input type="hidden" id="status" name="document[status]" value="upload">
          <input type="hidden" id="document_id" name="document[id]" value="">
          <input type="hidden" id="document_size" name="document[size]" value="">
          <input type="hidden" id="document_mimetype" name="document[mimetype]" value="">
          <input type="hidden" id="document_filename" name="document[filename]" value="">
          <input type="hidden" id="document_path" name="document[path]" value="">
          <div class="modal-content bg-lighter">
            <div class="modal-header">
                <!-- Header -->
              <h3 class="modal-title" id="unit-modal-title">Add a New Transaction</h3>
              <div class="btn-group btn-group-toggle btn-group-sm" data-toggle="buttons">
                <label class="btn btn-outline-dark active">
                  <input type="radio" name="transaction[type]" value="In" id="option1" autocomplete="off" checked> Create Income
                </label>
                <label class="btn btn-outline-dark">
                  <input type="radio" name="transaction[type]" value="Out" id="option2" autocomplete="off"> Create Expense
                </label>
              </div>
            </div>
            <div class="modal-body">
    
              <div class="row">
                <div class="col-12 col-md-7">
                  
                  <div class="form-wrapper">
                    <label class="form-label">
                      To/From
                    </label>
                    <div class="col-lg-9 col-sm-12">
                      <input type="text" id="transaction_user" name="transaction[user]" class="form-control w-100 ">
                    </div>
                  </div>

                  <div class="form-wrapper">
                    <label class="form-label">
                      Date
                    </label>
                    <div class="col-lg-9 col-sm-12">
                      <input type="text" id="transaction_created_at" name="transaction[created_at]" class="form-control w-100" value=""  data-toggle="flatpickr" required>
                    </div>
                  </div>

                  <div class="form-wrapper">
                    <label class="form-label">
                      Amount
                    </label>
                    <div class="col-lg-9 col-sm-12">
                      <div class="input-group input-group-merge">
                        <input type="text" id="transaction_amount" onkeypress="return isNumberKey(event)"  name="transaction[amount]" class="form-control form-control-prepended number" required>
                        <div class="input-group-prepend">
                          <div class="input-group-text">
                            <span>Â£</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
    
                  <!-- Start date -->
                  <div class="form-wrapper">
                    <label class="form-label">
                      Properties
                    </label>
                    <div class="col-lg-9 col-sm-12">
                      <select class="form-control" id="transaction_property" name="transaction[property_id]" data-toggle="select"  data-options='{"placeholder": "Select a Property"}' required>
                        <option></option>
                        <% properties.forEach(property => {%>
                        	<option value="<%= property.id%>"><%= property.address%>, <%= property.city%></option>
                        <% }) %>
                      </select>  
                    </div>
                  </div>

                  <div class="form-wrapper">
                    <label class="form-label">
                      Category
                    </label>
                    <div class="col-lg-9 col-sm-12">
                      <input type="text" id="transaction_category" name="transaction[category]" class="form-control w-100">
                    </div>
                  </div>

                  <div class="form-wrapper">
                    <label class="form-label">
                      Account
                    </label>
                    <div class="col-lg-9 col-sm-12">
                      <input type="text" id="transaction_account" name="transaction[account]" class="form-control w-100" value="manual transaction" readonly>
                    </div>
                  </div>

                  <div class="form-wrapper">
                    <label class="form-label">
                      Note
                    </label>
                    <div class="col-lg-9 col-sm-12">
                      <textarea id="transaction_note" data-toggle="autosize" rows="2" name="transaction[note]" class="form-control w-100"></textarea>
                    </div>
                  </div>
                </div>

                <div class="col-12 col-md-5">
                  <div class="dropzone dropzone-multiple">

                    <!-- Fallback -->
                    <div class="fallback">
                      <input type="file" class="custom-file-input" id="customFileUploadMultiple">
                    </div>

                    <div class="dz-message" data-dz-message>
                      <span class="fe fe-download" style="font-size: 2.5rem;"></span>
                      <div>Choose a file or drag it here</div>
                    </div>

                    <!-- Preview -->
                    <ul class="dz-preview dz-preview-multiple list-group list-group-lg list-group-flush">
                      <li class="list-group-item px-0">
                        <div class="row align-items-center">
                          <div class="col-auto">
                            <div class="avatar">
                              <img class="avatar-img rounded" src="..." alt="..." data-dz-thumbnail>
                            </div>
                          </div>
                          <div class="col ml-n3">
                            <h4 class="mb-1" data-dz-name>...</h4>
                            <p class="small text-muted mb-0" data-dz-size>...</p>
                          </div>
                          <div class="col-auto">
                            <div class="dropdown">
                              <a href="#" class="dropdown-item" title="Remove file" data-dz-remove>
                                <i class="fe fe-trash"></i>
                              </a>
                            </div>

                          </div>
                        </div>
                      </li>
                    </ul>

                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary" id="addUnitBtn">Add</button>
            </div>
          </div>
        </form>
      </div>
    </div>

