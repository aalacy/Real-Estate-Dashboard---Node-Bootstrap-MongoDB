<!doctype html>
<html lang="en">
  <head>
      <% include ../partials/head %>
  </head>
  <body class="d-flex align-items-center bg-auth border-top border-top-2 border-primary" style="background: #f9fbfd;">
    <!-- CONTENT
    ================================================== -->
    <div class="container">
      <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
          <img src="/img/logo.svg" style="width: 20px; height: auto;" class="rounded mr-2" alt="logo" />
          <strong class="mr-auto toast-title"></strong>
          <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="toast-body">
          
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-12 col-md-5 col-xl-4 mb-5">
          <div class="d-flex justify-content-center">
            <img class="avatar avatar-xxl" src="/img/icons/auth-logo.svg" alt="" />
          </div>
          <div class="card">
            <div class="card-body">

              <div class="signin alert alert-danger alert-dismissible fade show d-none" role="alert">
                <div class="message"></div>
                <button type="button" class="close" onclick="document.querySelector('.signin.alert').classList.add('d-none')" aria-label="Close">
                  <span aria-hidden="true">Ã—</span>
                </button>
              </div>
              
              <!-- Form -->
              <form id="signin-form"  autocomplete="off">

                <!-- Email address -->
                <div class="form-group">

                  <!-- Label -->
                  <label>Email Address</label>
                  <!-- Input -->
                  <input type="email" id="email" class="form-control" value="<%= email%>" placeholder="name@address.com" autocomplete="off" required>

                </div>

                <!-- Password -->
                <div class="form-group">

                  <div class="row">
                    <div class="col">
                          
                      <!-- Label -->
                      <label>Password</label>

                    </div>
                    <div class="col-auto">
                      
                      <!-- Help text -->
                      <a href="/password_reset" class="form-text small text-muted">
                        Forgot password?
                      </a>

                    </div>
                  </div> <!-- / .row -->

                  <!-- Input group -->
                  <div class="input-group input-group-merge">

                    <!-- Input -->
                    <input type="password" id="password" class="form-control form-control-appended" placeholder="Enter your password" required>

                    <!-- Icon -->
                    <div class="input-group-append">
                      <span class="input-group-text">
                        <i class="fe fe-eye"></i>
                      </span>
                    </div>

                  </div>
                </div>

                <!-- Submit -->
                <button class="btn btn-lg btn-block btn-primary btn-signin mb-3">
                  <span class="spinner-border spinner-border-sm loading d-none" role="status" aria-hidden="true"></span> Sign in  
                </button>
                <!-- Link -->
                <div class="text-center">
                  <small class="text-muted text-center">
                    Don't have an account yet? <a href="/signup">Sign up</a>.
                  </small>
                </div>
                
              </form>

            </div>
          </div> <!-- / .row -->
        </div>
      </div>
    </div> <!-- / .container -->

    <!-- JAVASCRIPT
    ================================================== -->
    <% include ../partials/scripts %>

  </body>
</html>