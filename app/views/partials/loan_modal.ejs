<div class="modal  fade" id="modalAddNewLoan" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <%=property.id%>
        <form id="add-loan-form" method="post" action="/property/loan/new/">
          <input type="hidden" name="_csrf" value="<%= token %>">
          <input type="hidden" name="property[id]" value="<%= property.id%>">
          <input type="hidden" id="current_value" value="<%= property.current_value%>">
          <div class="modal-content bg-lighter">
            <div class="modal-header">
                <!-- Header -->
              <h3 class="modal-title" id="loan-modal-title">Add a Loan Value</h3>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="d-flex mb-4">
                <div class="mr-3">Does this property have loan?</div>
                <div class="btn-group btn-group-toggle btn-group-sm" data-toggle="buttons">
                  <label class="btn btn-outline-dark active">
                    <input type="radio" name="property[has_loan]" value="1" id="on_loan" autocomplete="off" checked> Yes
                  </label>
                  <label class="btn btn-outline-dark">
                    <input type="radio" name="property[has_loan]" value="0" id="off_loan" autocomplete="off"> No
                  </label>
                </div>
              </div>
              <div class="row">
                <div class="col-12 col-md-6">
                  <div class="form-group">
                    <label class="mr-2">
                      Lender
                    </label>
                    <div class="input-group">
                      <input type="text" name="property[lender]" class="form-control form-control-prepended">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="mr-2">
                      Amount borrowed
                    </label>
                    <div class="input-group input-group-merge">
                      <input type="text" onkeypress="return isNumberKey(event)"  name="property[amount_borrowed]" class="form-control form-control-prepended number">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <span>£</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="mr-2">
                      Interest Rate
                    </label>
                    <div class="input-group input-group-merge">
                      <input type="text" onkeypress="return isNumberKey(event)"  name="property[interest_rate]" class="form-control form-control-prepended number">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <span>%</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="mr-2">
                      Monthly payment
                    </label>
                    <div class="input-group input-group-merge">
                      <input type="text" onkeypress="return isNumberKey(event)"  name="property[monthly_payment]" class="form-control form-control-prepended number">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <span>£</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-md-6">
                  <div class="form-group">
                    <label class="mr-2">
                      Current Loan Balance
                    </label>
                    <div class="input-group input-group-merge">
                      <input type="text" onkeypress="return isNumberKey(event)"  name="property[loan]" class="form-control form-control-prepended number property_debt" aria-describedby="loanHelperUpdatedAt" required>
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <span>£</span>
                        </div>
                      </div>
                    </div>
                    <small id="loanHelperUpdatedAt" class="form-text text-muted">
                      Last updated: <span class="update-at"></span>
                    </small>
                  </div>
                  <div class="form-group">
                    <label>
                      Start Date
                    </label>
                    <input type="text" name="property[start_date]" class="form-control" value=""  data-toggle="flatpickr">
                  </div>
                  <div class="form-group">
                    <label>
                      Maturity Date
                    </label>
                    <input type="text" name="property[maturity_date]" class="form-control" value=""  data-toggle="flatpickr">
                  </div>
                  <input type="hidden" onkeypress="return isNumberKey(event)"  name="property[equity]" class="form-control form-control-prepended number property_equity" readonly>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-primary" id="addLoanBtn">Save Changes</button>
            </div>
          </div>
        </form>
      </div>
    </div>