<div class="modal fade" id="modalUpload" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <form id="document-upload-form" method="post" action="/property/documents/upload_all" >
      <input type="hidden" name="_csrf" value="<%= token %>">
      <input type="hidden" class="status" name="document[status]" value="upload">
      <input type="hidden" class="document_id" name="document[id]" value="">
      <input type="hidden" class="document_size" name="document[size]" value="">
      <input type="hidden" class="document_mimetype" name="document[mimetype]" value="">
      <input type="hidden" class="document_filename" name="document[filename]" value="">
      <input type="hidden" class="document_path" name="document[path]" value="">
      <div class="modal-content bg-lighter">
        <div class="modal-header">
            <!-- Header -->
          <h3 class="modal-title">Upload Document</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-12 col-md-6">
              <div class="row property-row">
                <div class="col-12">
                  
                  <!-- Start date -->
                  <div class="form-group">
                    <label>
                      Properties
                    </label>
                    <select class="form-control property-filter" id="document_property" name="document[property]" data-toggle="select"  data-options='{"placeholder": "Select a Property"}' required>
                      <option></option>
                    </select>  
                  </div>
                </div>
              </div>
              <div class="row unit-row">
                <div class="col-12">
                  <div class="form-group">
                    <label>
                      Unit (Optional)
                    </label>
                    <div class="d-flex">
                      <select class="form-control unit-filter no-unit document_unit" id="document_unit" name="document[unit_id]" data-toggle="select"  data-options='{"placeholder": "Select a Unit"}'>
                        <option></option>
                      </select>  
                     </div>
                  </div>
                </div>
              </div>
              <div class="row unit-row">
                <div class="col-12">
                  <div class="form-group">
                    <label>
                      Category
                    </label>
                    <select class="form-control document_category filter-by-doc-category" name="document[category]" data-toggle="select"  data-options='{"placeholder": "Select a Category"}'>
                      <option></option>
                      <option value="All">All Categories</option>
                      <option value="Key Documents">Key Documents</option>
                      <option value="Ownership">Ownership</option>
                      <option value="Mortgage & Financing">Mortgage & Financing</option>
                      <option value="Other Financial">Other Financial</option>
                      <option value="Uncategorised">Uncategorised</option>
                    </select>  
                  </div>
                </div>
              </div>
              <div class="row keydoc-subcategory-group d-none">
                <div class="col-12">
                  <div class="form-group">
                    <label>
                      Subcategory
                    </label>
                    <select class="form-control filter-by-doc-subcategory" name="document[subcategory]" data-toggle="select"  data-options='{"placeholder": "Select a Subcategory"}'>
                      <option></option>
                      <option value="EPC">EPC</option>
                      <option value="Gas Safety Record">Gas Safety Record</option>
                      <option value="Fire Safety Record">Fire Safety Record</option>
                      <option value="Floorplan">Floorplan</option>
                      <option value="EICR">EICR</option>
                    </select>  
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-12 col-md-6 col-lg-7 doc-expirydate-group d-none">
                  <div class="form-group">
                    <label>Expiry Date</label>
                    <input type="text" name="document[expiry_date]" class="form-control doc-expiry-date" value=""  data-toggle="flatpickr" required>
                  </div>
                </div>
                <div class="col-12 col-md-6 col-lg-5 doc-rating-group d-none">
                  <div class="form-group">
                    <label>
                      Rating
                    </label>
                    <select class="form-control doc-rating" name="document[rating]" data-toggle="select"  data-options='{"placeholder": "Mark Rating"}'>
                      <option value=""></option>
                      <option value="A">A</option>
                      <option value="B">B</option>
                      <option value="C">C</option>
                      <option value="D>D</option>
                      <option value="F>F</option>
                      <option value="G">G</option>
                    </select>  
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <label> Note </label>
                    <textarea id="document_note" data-toggle="autosize" rows="2" name="document[note]" class="form-control w-100" placeholder="Enter notes about this document here"></textarea>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-md-6">
              <div class="dropzone dropzone-multiple">

                <!-- Fallback -->
                <div class="fallback">
                  <input type="file" class="custom-file-input">
                </div>

                <div class="dz-message" data-dz-message>
                  <div class="document-upload-image"></div>
                  <span class="fe fe-download" style="font-size: 2.5rem;"></span>
                  <div class="dz-message-placeholder">Choose a file or drag it here</div>
                </div>

                <!-- Preview -->
                <ul class="dz-preview dz-preview-multiple list-group list-group-lg list-group-flush">
                  <li class="list-group-item px-0">
                    <div class="row align-items-center">
                      <div class="col-auto">
                        <div class="avatar">
                          <img class="avatar-img rounded" src="..." alt="..." data-dz-thumbnail>
                        </div>
                      </div>
                      <div class="col ml-n3">
                        <h4 class="mb-1 document-name" data-dz-name>...</h4>
                        <p class="small text-muted mb-0" data-dz-size>...</p>
                      </div>
                      <div class="col-auto">
                        
                        <div class="dropdown">
                          <a href="#" class="dropdown-item" title="Remove file" data-dz-remove>
                            <i class="fe fe-trash" id="trashImage"></i>
                          </a>
                        </div>

                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" id="cancelDocumentBtn">Cancel</button>
          <button type="button" id="uploadDocumentBtn" class="btn btn-primary upload-img-btn">Save Changes</button>
        </div>
      </div>
    </form>
  </div>
</div>
